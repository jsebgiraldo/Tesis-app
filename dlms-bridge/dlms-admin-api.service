[Unit]
Description=DLMS Admin API (FastAPI)
After=network.target

[Service]
Type=simple
User=pci
Group=pci
WorkingDirectory=/home/pci/Documents/sebas_giraldo/Tesis-app/dlms-bridge
Environment="PATH=/home/pci/Documents/sebas_giraldo/Tesis-app/dlms-bridge/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pci/Documents/sebas_giraldo/Tesis-app/dlms-bridge/venv/bin/uvicorn admin.api:app --host 0.0.0.0 --port 8000

Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
