# Enable Wi-Fi Station and BLE provisioning using NimBLE
CONFIG_ESP_WIFI_ENABLED=y
CONFIG_ESP_WIFI_STA_ENABLE=y

# Enable BT Controller and BLE stack (NimBLE is smaller)
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_NIMBLE_HOST=y
CONFIG_BT_NIMBLE_ROLE_PERIPHERAL=y
CONFIG_BT_NIMBLE_ROLE_BROADCASTER=y
CONFIG_BT_CONTROLLER_ENABLED=y
CONFIG_BT_BLE_ENABLED=y

# Provisioning manager and BLE scheme
CONFIG_WIFI_PROV_MANAGER_SCHEME_BLE=y
CONFIG_WIFI_PROV_BLE_FORCE_ENCRYPTION=y
CONFIG_WIFI_PROV_SEC_1=y

# Increase GATT MTU a bit for provisioning
CONFIG_BT_NIMBLE_GATT_MAX_MTU=256

# Default Proof of Possession (can be overridden in menuconfig)
CONFIG_EXAMPLE_PROV_POP="abcd1234"
