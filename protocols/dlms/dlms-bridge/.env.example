# DLMS Configuration
DLMS_HOST=192.168.5.177
DLMS_PORT=3333
DLMS_TIMEOUT_S=5.0
DLMS_CLIENT_SAP=1
DLMS_SERVER_LOGICAL=0
DLMS_SERVER_PHYSICAL=1
DLMS_PASSWORD=22222222
# DLMS_MAX_INFO_LENGTH=  # Leave empty for default

# Measurements to read (comma-separated)
# Available: voltage_l1, current_l1
DLMS_MEASUREMENTS=["voltage_l1", "current_l1"]

# Control settings
POLL_PERIOD_S=5.0
MAX_CONSEC_ERRORS=10
VERBOSE=false

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=
MQTT_TLS=false
MQTT_CLIENT_ID=dlms-bridge
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_TOPIC=meters/{device_id}/telemetry

# Device identification
DEVICE_ID=microstar-001
